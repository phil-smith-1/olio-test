<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Section</th>
        <th scope="col">Likes</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <%= article.title %>
          </td>
          <td>
            <%= article.section %>
          </td>
          <td>
            <%= article.likes %>
          </td>
          <td>
            <%= link_to "Show this article", article %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
